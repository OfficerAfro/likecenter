@model LUser

<form action="LogCheck" method="post">


        <div class="form-group">
        <label>Email</label>
        <span asp-validation-for="LEmail" style="color:red;"></span>
        <input type="text" name="LEmail" class="form-control">
    <p>
        <span asp-asp-validation-for="Email"></span>
    </p>
    </div>
        <div class="form-group">
        <label>Password</label>
        <span asp-validation-for="LPassword" style="color:rebeccapurple;"></span>
        <input type="Password" name="LPassword" class="form-control">
    <p>
        <span asp-asp-validation-for="Password"></span>
    </p>
    </div>
        <input type="submit" value="Login" class="btn btn-success"/>


</form>
